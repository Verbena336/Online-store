{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": { "@src/*" : ["./*"] }
  },
  "exclude": ["node_modules", "/"],
  "include": ["src/*", "src/ts/types/types.ts"]
}
